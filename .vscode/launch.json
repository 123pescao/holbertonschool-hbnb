{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py", // Update to your actual entry point module
                "FLASK_ENV": "development" // Use "production" if deploying
            },
            "args": [
                "run",
                "--no-debugger",  // Optional: Remove Flask debugger
                "--no-reload"     // Optional: Remove Flask auto-reload
            ],
            "jinja": true,
            "console": "integratedTerminal" // This makes the output appear inside VS Code terminal
        }
    ]
}
